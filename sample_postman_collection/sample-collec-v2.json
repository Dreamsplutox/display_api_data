{
    "info": {
        "_postman_id": "8490fec2-54d2-e357-85c0-f12b9913ad39",
        "name": "Postman Chaining Demo",
        "schema": "https://schema.getpostman.com/json/collection/v2.0.0/collection.json"
    },
    "item": [
        {
            "name": "Register",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "var jsonData = JSON.parse(responseBody);",
                            "postman.setEnvironmentVariable(\"token\", jsonData.token);"
                        ]
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "formdata",
                    "formdata": [
                        {
                            "key": "username",
                            "value": "abc",
                            "type": "text"
                        },
                        {
                            "key": "password",
                            "value": "blah",
                            "type": "text"
                        }
                    ]
                },
                "url": "http://localhost/dummyapi/register"
            },
            "response": []
        },
        {
            "name": "Status Update",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "tests[\"Body matches string\"] = responseBody.has(\"abcdefg\");"
                        ]
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "formdata",
                    "formdata": [
                        {
                            "key": "token",
                            "value": "{{token}}",
                            "type": "text"
                        },
                        {
                            "key": "status",
                            "value": "Something",
                            "type": "text"
                        }
                    ]
                },
                "url": "http://localhost/dummyapi/status"
            },
            "response": []
        }
    ]
}